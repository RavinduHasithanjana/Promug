<Page
    x:Class="pro_mug.RegisterPart2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:pro_mug"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="2,2.333,-2,-2.333">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Images/p.PNG"/>
        </Grid.Background>
        <PasswordBox PlaceholderText="Password" Margin="96,227,98,0" RenderTransformOrigin="0.092,1.795" Background="White" VerticalAlignment="Top" BorderBrush="Black" Foreground="Black" d:LayoutOverrides="LeftPosition, RightPosition"/>
        <PasswordBox PlaceholderText="Confirm Password" Margin="96,271,98,0" RenderTransformOrigin="0.092,1.795" Background="White" VerticalAlignment="Top" BorderBrush="Black" Foreground="Black" d:LayoutOverrides="LeftPosition, RightPosition"/>
        <TextBox PlaceholderText="Username" Margin="96,179,98,0" Background="White" BorderBrush="Black" Foreground="Black" VerticalAlignment="Top" d:LayoutOverrides="LeftPosition, RightPosition"/>
        <TextBox PlaceholderText="Product ID" Margin="96,131,98,0" VerticalAlignment="Top" Background="White" BorderBrush="Black" Foreground="Black" d:LayoutOverrides="LeftPosition, RightPosition"/>
        <TextBlock x:Name="textBlock" Height="35" Margin="37,70,116,0" TextWrapping="Wrap" Text="Credentials" VerticalAlignment="Top" Foreground="Black" FontSize="24"/>
        <Path Data="M50,108 L330,108" Fill="#FFF4F4F5" Height="26" Margin="37.333,105.083,56.667,0" Stretch="Fill" Stroke="Black" StrokeThickness="5" UseLayoutRounding="False" VerticalAlignment="Top" d:LayoutOverrides="LeftPosition, RightPosition"/>
        <Button x:Name="btnNext" Content="Finish" Height="10" Margin="0,0,70,58" VerticalAlignment="Bottom" Width="95" HorizontalAlignment="Right" Foreground="White" BorderBrush="Black" Background="#FF0D1B5B" RenderTransformOrigin="0.535,-0.293"/>
        <Button x:ConnectionId='1' x:Name="btnBackRegister"                     Content="Back" Height="10" Margin="56,0,235,58" VerticalAlignment="Bottom" Width="95" HorizontalAlignment="Stretch" Foreground="White" BorderBrush="Black" Background="#FF870309" RenderTransformOrigin="0.535,-0.293"/>
        <TextBlock x:Name="textBlock1" Height="110" Margin="127,0,116,179" TextWrapping="Wrap" Text="One more step to GO.." VerticalAlignment="Bottom" FontSize="32" Foreground="#FF1B3893" FontFamily="Segoe UI Light"/>


    </Grid>
    
</Page>

