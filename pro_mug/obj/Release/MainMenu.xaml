<Page
    x:Class="pro_mug.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:pro_mug"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Images/back.jpg"/>
        </Grid.Background>
        <Button x:ConnectionId='1'                      VerticalAlignment="Top" Height="115" Width="95" BorderBrush="{x:Null}" Margin="12,8,0,0" AllowDrop="True" Canvas.ZIndex="4" >
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Images/drink.png"/>
            </Button.Background>
        </Button>

        <Button x:ConnectionId='2'                      VerticalAlignment="Top" Height="127" Width="117" BorderBrush="{x:Null}" Margin="4,131,0,0" AllowDrop="True" Canvas.ZIndex="3" >
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Images/medi.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='3'                      VerticalAlignment="Stretch" Width="109" d:LayoutOverrides="TopPosition, BottomPosition" BorderBrush="{x:Null}" Margin="10,265,0,254" AllowDrop="True" Canvas.ZIndex="2" >
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Images/music.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='4'                     VerticalAlignment="Bottom" Height="115" Width="95" BorderBrush="{x:Null}" Margin="4,0,0,144" AllowDrop="True" >
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Images/satat.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='5'                     VerticalAlignment="Top" Height="115" BorderBrush="{x:Null}" Grid.Column="1" HorizontalAlignment="Stretch" Margin="-28,29,29,0" AllowDrop="True" Canvas.ZIndex="9" d:LayoutOverrides="LeftPosition, RightPosition" >
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Images/mail.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='6'                       VerticalAlignment="Top" Height="115" Width="95" BorderBrush="{x:Null}" Grid.Column="1" HorizontalAlignment="Stretch" Margin="-22,157,33,0" AllowDrop="True" Canvas.ZIndex="5" >
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Images/recipe.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='7'                      VerticalAlignment="Stretch" BorderBrush="{x:Null}" Grid.Column="1" HorizontalAlignment="Stretch" Margin="-28,265,31,251" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition" AllowDrop="True" Canvas.ZIndex="4" >
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Images/gluco.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='8'                     VerticalAlignment="Bottom" Height="115" BorderBrush="{x:Null}" Grid.Column="1" HorizontalAlignment="Stretch" Margin="-32,0,29,140" Canvas.ZIndex="3" AllowDrop="True" d:LayoutOverrides="LeftPosition, RightPosition" >
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Images/face.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='9'                         VerticalAlignment="Bottom" Height="115" Width="95" BorderBrush="{x:Null}" Grid.Column="1" HorizontalAlignment="Stretch" Margin="-22,0,33,23" Canvas.ZIndex="2" AllowDrop="True" >
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Images/reminder.png"/>
            </Button.Background>
        </Button>

        <Button x:ConnectionId='10'                     VerticalAlignment="Bottom" Height="115" Width="95" d:LayoutOverrides="Width" BorderBrush="{x:Null}" Canvas.ZIndex="5" AllowDrop="True" />
        <Image Source="Images/back.png" Margin="0,0,0,10" HorizontalAlignment="Left" Width="95" Height="95" VerticalAlignment="Bottom"/>


    </Grid>
</Page>

